<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="mb-6">
    <%= link_to "&larr; Back to Articles".html_safe, articles_path, class: "text-blue-600 hover:text-blue-800 transition-colors" %>
  </div>

  <article class="bg-white rounded-lg border border-gray-200 p-8">
    <header class="mb-6">
      <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @recording.recordable.title %></h1>
      <div class="text-sm text-gray-500">
        <span>Created <%= time_ago_in_words(@recording.created_at) %> ago</span>
        <% if @recording.updated_at != @recording.created_at %>
          <span class="mx-2">|</span>
          <span>Updated <%= time_ago_in_words(@recording.updated_at) %> ago</span>
        <% end %>
      </div>
    </header>

    <% if @recording.recordable.body.present? %>
      <div class="prose prose-lg max-w-none text-gray-700">
        <%= simple_format(@recording.recordable.body) %>
      </div>
    <% else %>
      <p class="text-gray-400 italic">No content.</p>
    <% end %>
  </article>

  <div class="mt-6 flex gap-4">
    <%= link_to "Edit", edit_article_path(@recording), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    <%= button_to "Delete", @recording, method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", form: { data: { turbo_confirm: "Are you sure you want to delete this article?" } } %>
    <% if @recording.recordable.publishable? %>
      <%= render "publications/toggle", recording: @recording %>
    <% end %>
  </div>

  <%# Comments Section %>
  <% if @recording.recordable.commentable? %>
    <section class="mt-10">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Comments</h2>

      <div id="comments" class="space-y-4 mb-6">
        <% @recording.comments.each do |comment_recording| %>
          <%= render partial: "comments/comment", locals: { comment_recording: comment_recording } %>
        <% end %>
      </div>

      <%= render "comments/form", parent_recording: @recording, comment: Comment.new %>
    </section>
  <% end %>
</div>
