<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Articles</h1>
    <%= link_to "New Article", new_article_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>

  <% if @recordings.any? %>
    <div class="space-y-4">
      <%= render partial: "article", collection: @recordings, as: :recording %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <p class="text-gray-500 text-lg">No articles yet.</p>
      <p class="text-gray-400 mt-2">Get started by creating your first article.</p>
    </div>
  <% end %>
</div>
