<div id="<%= dom_id(comment_recording) %>" class="bg-gray-50 rounded-lg p-4 border border-gray-200">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <div class="text-gray-700">
        <%= simple_format(comment_recording.recordable.body) %>
      </div>
      <div class="text-xs text-gray-400 mt-2">
        <%= time_ago_in_words(comment_recording.created_at) %> ago
      </div>
    </div>
    <div class="ml-4">
      <%= button_to recording_comment_path(comment_recording.parent, comment_recording),
            method: :delete,
            class: "text-red-500 hover:text-red-700 text-sm transition-colors",
            data: { turbo_confirm: "Are you sure you want to delete this comment?" } do %>
        Delete
      <% end %>
    </div>
  </div>
</div>
