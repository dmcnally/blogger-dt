<%# Append the new comment to the comments list %>
<%= turbo_stream.append "comments" do %>
  <%= render partial: "comments/comment", locals: { comment_recording: @comment_recording } %>
<% end %>

<%# Reset the form by replacing it with a fresh one %>
<%= turbo_stream.replace "comment_form" do %>
  <%= render "comments/form", parent_recording: @parent_recording, comment: Comment.new %>
<% end %>
